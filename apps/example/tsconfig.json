{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@zephra/framework": ["../core/framework/src"],
      "@zephra/framework/*": ["../core/framework/src/*"],
      "@/*": ["./app/*"]
    },
    "jsx": "react-jsx",
    "types": ["bun-types"]
  },
  "include": [
    "index.ts",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
} 