{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@framework/*": ["../core/framework/src/*"],
      "@/*": ["./app/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "index.ts",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
} 