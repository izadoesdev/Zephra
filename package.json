{
  "name": "zephra",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "core/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && bun dev",
    "build": "bun run build:framework && bun run build:cli && bun run build:web",
    "build:framework": "cd core/framework && bun build",
    "build:cli": "cd packages/cli && bun build",
    "build:web": "cd apps/web && bun build",
    "test": "bun test",
    "zephra": "bun packages/cli/src/index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@elysiajs/html": "^1.3.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.0",
    "commander": "^13.1.0",
    "picocolors": "^1.1.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0"
  }
}